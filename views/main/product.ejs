<% layout('layout') -%>

<div class="container">

    <div class="row">
        <div class="col-md-8">
            <img src="<%= product.image %>" alt="">

             </div>
            <div class="col-md-4">
              <h3><%= product.name %></h3>
              <h4><%= product.price %>€ </h4>  
           
       
            <form class="" method="post">

                <div class="btn-group" role="group">
                    <input type="hidden" name="quantity" id="quantity" value="1">
                    <button type="button" id="minus" class="btn btn-default">-</button>
                    <button type="button" id="total" class="btn btn-default">1</button>
                    <button type="button" id="plus" class="btn btn-default">+</button>

                </div>

                <div class="form-group mt-5">
                    <!-- récuperation des données -->

                    <input type="hidden" name="product_id" id="product_id" value="<%= product._id %>">
                    <input type="hidden" name="priceHidden" id="priceHidden" value="<%= product.price %>">
                    <!-- affichage des données -->
                    <input type="text" name="item" class="form-control" value="<%= product.name %>">
                    <input type="text" name="priceValue" id="priceValue" class="form-control" value="<%= product.price %>">
                    <br>

                    <% if (user) { %>
                    <div class="mt-3">
                        
                        <button type="submit" class="btn btn-info">Ajouter au panier</button>


                    </div>

                    
                    <% } else{%>
                        <div class="mt-3">
                        
                            <a href="/signup" class="btn btn-dark">Incrivez-vous ou connectez-vous pour commander.</a>
    
    
                        </div>
                        <% } %>
    

                </div>


            </form>

 </div>
    </div>
</div>