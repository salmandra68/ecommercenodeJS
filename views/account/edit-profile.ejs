<% layout ('layout') -%>


<div class="container">
  <!-- Example row of columns -->
    <div class="row">
        <div class="col-lg-6 mx-auto mt-5">
        <h2>Modifier votre profil</h2>

            <% if(message.length > 0) { %>
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <button type ="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span> &times;</span>
                    </button>

                <%= message %>
                </div>
                
            <% }%>


            <form method="post" class="mt-3">
            
                <div class="form-group" class="mb-5">
                    <input type="text" name="name" class="form-control" placeholder="Votre Nom" value="<%= user.profile.name %>">
                </div>

                <div class="form-group" class="mb-5">
                    <input type="text" name="address" class="form-control" placeholder="Votre adresse" value="<%= user.adress %>">
                </div>

                <a href="/profile" class="btn btn-warning"> Retour</a>
               
                <input type="submit" value="Modifier" class="btn btn-info">
            </form>
        </div>
    
    </div>
</div>    